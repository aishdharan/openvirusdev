        </mrow>
        <mo stretchy="true">)</mo>
       </mrow>
      </mrow>
      <mo>=</mo>
     </mtd>
    </mtr>
    <mtr>
     <mtd>
      <mrow>
       <mo>∫</mo>
       <msup>
        <mi>d</mi>
        <mi>n</mi>
       </msup>
       <mi>x</mi>
       <msqrt>
        <mi>g</mi>
       </msqrt>
       <mrow>
        <mo stretchy="true">(</mo>
        <msup>
         <mi>ε</mi>
         <mrow>
          <msub>
           <mi>I</mi>
           <mn>1</mn>
          </msub>
          <mo>…</mo>
          <msub>
           <mi>I</mi>
           <mi>N</mi>
          </msub>
         </mrow>
        </msup>
        <mfrac>
         <mrow>
          <mo>∂</mo>
          <msup>
           <mi>P</mi>
           <mrow>
            <msub>
