             <mi>I</mi>
             <mn>1</mn>
            </msub>
           </mrow>
          </msup>
         </mrow>
        </mfrac>
        <mo>…</mo>
        <mn>..</mn>
        <mfrac>
         <mrow>
          <mo>∂</mo>
          <msup>
           <mi>P</mi>
           <mrow>
            <msub>
             <mi>I</mi>
             <mi>N</mi>
            </msub>
           </mrow>
          </msup>
         </mrow>
         <mrow>
          <mo>∂</mo>
          <msup>
           <mi>y</mi>
           <mrow>
            <msub>
             <mi>I</mi>
             <mi>N</mi>
            </msub>
           </mrow>
          </msup>
         </mrow>
        </mfrac>
        <msub>
         <mi>ε</mi>
         <mrow>
          <msub>
           <mi>I</mi>
           <mn>1</mn>
          </msub>
          <mo>…</mo>
          <msub>
           <mi>I</mi>
           <mi>N</mi>
          </msub>
         </mrow>
        </msub>
        <mfrac>
         <mrow>
          <mo>∂</mo>
          <msub>
           <mi>P</mi>
           <mrow>
            <msub>
             <mi>I</mi>
             <mn>1</mn>
            </msub>
           </mrow>
          </msub>
         </mrow>
         <mrow>
          <mo>∂</mo>
          <msub>
           <mi>y</mi>
           <mrow>
            <msub>
             <mi>I</mi>
             <mn>1</mn>
            </msub>
           </mrow>
          </msub>
         </mrow>
        </mfrac>
        <mo>…</mo>
        <mn>..</mn>
        <mfrac>
         <mrow>
          <mo>∂</mo>
          <msub>
           <mi>P</mi>
           <mrow>
            <msub>
