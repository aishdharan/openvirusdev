       <mfrac>
        <mrow>
         <mo>∂</mo>
         <msup>
          <mi>P</mi>
          <mrow>
           <msub>
            <mi>I</mi>
            <mn>1</mn>
           </msub>
          </mrow>
         </msup>
        </mrow>
        <mrow>
