        </mrow>
       </msub>
       <msup>
        <mi>ε</mi>
        <mrow>
         <msub>
          <mi>I</mi>
          <mn>1</mn>
         </msub>
         <mo>…</mo>
         <msub>
          <mi>I</mi>
          <mi>m</mi>
         </msub>
        </mrow>
       </msup>
       <mfrac>
        <mrow>
         <mo>∂</mo>
         <msup>
          <mi>P</mi>
          <mrow>
           <msub>
            <mi>I</mi>
            <mn>1</mn>
           </msub>
