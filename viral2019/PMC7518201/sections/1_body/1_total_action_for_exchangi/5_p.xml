         </msup>
        </mrow>
       </mfrac>
       <mo>…</mo>
       <mn>..</mn>
       <mfrac>
        <mrow>
         <mo>∂</mo>
         <msup>
          <mi>P</mi>
          <mrow>
           <msub>
            <mi>I</mi>
            <mi>N</mi>
           </msub>
          </mrow>
         </msup>
        </mrow>
        <mrow>
         <mo>∂</mo>
         <msup>
          <mi>y</mi>
          <mrow>
           <msub>
            <mi>I</mi>
            <mi>N</mi>
           </msub>
          </mrow>
         </msup>
        </mrow>
       </mfrac>
      </mrow>
     </mtd>
    </mtr>
    <mtr>
     <mtd>
      <mo>⇓</mo>
     </mtd>
    </mtr>
    <mtr>
     <mtd>
      <mrow>
       <msubsup>
        <mi>S</mi>
        <mrow>
         <mi>cov</mi>
         <mn>1</mn>
        </mrow>
        <mrow>
         <mi>N</mi>
         <mo linebreak="badbreak">=</mo>
         <mi>n</mi>
        </mrow>
       </msubsup>
       <mo linebreak="badbreak">=</mo>
       <mo>∫</mo>
       <msup>
        <mi>d</mi>
        <mi>n</mi>
       </msup>
       <mi>x</mi>
       <msqrt>
        <mi>g</mi>
       </msqrt>
       <mrow>
        <mo stretchy="true">(</mo>
        <mrow>
         <mi>T</mi>
         <mi>O</mi>
         <mi>T</mi>
         <msub>
          <mi>P</mi>
          <mrow>
           <msub>
            <mi>I</mi>
            <mn>1</mn>
           </msub>
           <mo>…</mo>
           <msub>
            <mi>I</mi>
            <mi>N</mi>
           </msub>
          </mrow>
         </msub>
         <mi>T</mi>
         <mi>O</mi>
         <mi>T</mi>
         <msup>
          <mi>P</mi>
          <mrow>
           <msub>
            <mi>I</mi>
            <mn>1</mn>
           </msub>
           <mo>…</mo>
           <msub>
            <mi>I</mi>
            <mi>N</mi>
           </msub>
          </mrow>
