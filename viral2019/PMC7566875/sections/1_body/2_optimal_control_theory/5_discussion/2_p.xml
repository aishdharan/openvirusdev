         <mn>0</mn>
         <mo>)</mo>
        </mrow>
        <mo>=</mo>
        <msub>
         <mrow>
          <mi mathvariant="bold-italic">x</mi>
         </mrow>
         <mrow>
          <mn>0</mn>
         </mrow>
        </msub>
        <mo>,</mo>
        <mspace width="0.16667em"/>
        <mspace width="0.16667em"/>
        <msub>
         <mrow>
          <mi mathvariant="bold-italic">x</mi>
         </mrow>
         <mrow>
          <mn>0</mn>
         </mrow>
        </msub>
        <mo>=</mo>
        <mtext>initial conditions implied by Eq. (4)</mtext>
        <mo>,</mo>
