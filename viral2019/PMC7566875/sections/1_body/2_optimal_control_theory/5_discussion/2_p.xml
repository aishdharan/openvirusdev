        <mo>≤</mo>
        <mi mathvariant="bold-fraktur">u</mi>
        <mrow>
         <mo>(</mo>
         <mi mathvariant="bold-fraktur">t</mi>
         <mo>)</mo>
        </mrow>
        <mo>≤</mo>
        <mn>1</mn>
        <mo>,</mo>
        <mspace width="2em"/>
        <mn>0</mn>
        <mo>≤</mo>
        <mi mathvariant="bold-fraktur">t</mi>
        <mo>≤</mo>
        <mi mathvariant="bold-fraktur">T</mi>
